@using ProgressLog.Models
@model User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progress Loger</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/regLogin.css">
</head>

<body>
    <div class="regLogin-container">


        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#136DC0" fill-opacity="1"
                d="M0,288L40,288C80,288,160,288,240,245.3C320,203,400,117,480,90.7C560,64,640,96,720,106.7C800,117,880,107,960,101.3C1040,96,1120,96,1200,96C1280,96,1360,96,1400,96L1440,96L1440,0L1400,0C1360,0,1280,0,1200,0C1120,0,1040,0,960,0C880,0,800,0,720,0C640,0,560,0,480,0C400,0,320,0,240,0C160,0,80,0,40,0L0,0Z">
            </path>
        </svg>


        <div class="form-container">

            <form asp-action="Redgister" asp-controller="Home" method="POST">
                <h1>Register</h1>
                <a href="/signin">Sign in.</a>
                <span asp-validation-for="FirstName"></span>
                <input asp-for="FirstName" placeholder="First Name">

                <span asp-validation-for="LastName"></span>
                <input asp-for="LastName" placeholder="Last Name">

                <span asp-validation-for="Email"></span>
                <input asp-for="Email" placeholder="Email">

                <span asp-validation-for="Password"></span>
                <input asp-for="Password" placeholder="Password">

                <span asp-validation-for="Confirm"></span>
                <input asp-for="Confirm" placeholder="Confirm Password">

                @* <input type="submit" value="submit"> *@
                <button type="submit">Create Account</button>

            </form>
        </div>


        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#136DC0" fill-opacity="1"
                d="M0,96L60,117.3C120,139,240,181,360,165.3C480,149,600,75,720,48C840,21,960,43,1080,90.7C1200,139,1320,213,1380,250.7L1440,288L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z">
            </path>
        </svg>

    </div>

</body>

</html>
