<body>
    <div class="regLogin-container">

        <div class="logo-container">
            <img src="~/images/logoLarge.png" alt="">
        </div>

        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#136DC0" fill-opacity="1"
                d="M0,320L40,298.7C80,277,160,235,240,224C320,213,400,235,480,240C560,245,640,235,720,229.3C800,224,880,224,960,224C1040,224,1120,224,1200,234.7C1280,245,1360,267,1400,277.3L1440,288L1440,0L1400,0C1360,0,1280,0,1200,0C1120,0,1040,0,960,0C880,0,800,0,720,0C640,0,560,0,480,0C400,0,320,0,240,0C160,0,80,0,40,0L0,0Z">
            </path>
        </svg>

        <div class="form-container">

            <form asp-action="Redgister" asp-controller="Home" method="POST">
                <h1>Register</h1>
                <a href="/signin">Sign in.</a>
                <span asp-validation-for="FirstName"></span>
                <input asp-for="FirstName" placeholder="First Name">

                <span asp-validation-for="LastName"></span>
                <input asp-for="LastName" placeholder="Last Name">

                <span asp-validation-for="Email"></span>
                <input asp-for="Email" placeholder="Email">

                <span asp-validation-for="Password"></span>
                <input asp-for="Password" placeholder="Password">

                <span asp-validation-for="Confirm"></span>
                <input asp-for="Confirm" placeholder="Confirm Password">

                @* <input type="submit" value="submit"> *@
                <button type="submit">Create Account</button>

            </form>
        </div>

        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
            <path fill="#136DC0" fill-opacity="1"
                d="M0,0L40,16C80,32,160,64,240,90.7C320,117,400,139,480,154.7C560,171,640,181,720,208C800,235,880,277,960,250.7C1040,224,1120,128,1200,96C1280,64,1360,96,1400,112L1440,128L1440,320L1400,320C1360,320,1280,320,1200,320C1120,320,1040,320,960,320C880,320,800,320,720,320C640,320,560,320,480,320C400,320,320,320,240,320C160,320,80,320,40,320L0,320Z">
            </path>
        </svg>
    </div>

</body>

</html>
