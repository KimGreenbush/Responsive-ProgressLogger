<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progressly Page</title>
    <link rel="stylesheet" href="~/css/landingPage.css">
    <script src="~/js/landingPage.js" async=""></script>
    <script src="~/js/script.js" async=""></script>


</head>

<body>

    <partial name="_headerBanner" />

    <div id="signInContainer" class="signIn-container">
        <partial name="_signIn" />
    </div>
    <div class="landingPage-container">



        <nav>
            @* <button onclick="showSignIn(event)">sign up</button> *@
            <button onclick="showSignIn(event)">sign in</button>
        </nav>



        <div class="background-container">
            <picture id="blurImage">
                <source media="(min-width: 1100px)" srcset="/assets/landingPageDesktop.png" />
                <source media="(min-width: 500px)" srcset="/assets/landingPageTablet.png" />
                <img src="/assets/landingPageMobile.png" alt="">
            </picture>
        </div>


        <div class="options-container">
            <header>
                <picture>
                    <source media="(min-width: 1100px)" srcset="/assets/logoLarge.png" />
                    <img src="/assets/logoSmall.png" alt="">
                </picture>
                <p>Connecting people together to <b>help businesses</b> get online. </p>
            </header>
            <main id="mainOptions">
                <button onclick="HeaderBannerHandler(event)">Website Services</button>
                <button onclick="HeaderBannerHandler(event)">Apprentice</button>
                <button onclick="HeaderBannerHandler(event)">Mentor</button>
            </main>
        </div>

        <div class="apprenticePage-container"></div>
        <div class="mentorPage-container"></div>


    </div>




</body>

</html>